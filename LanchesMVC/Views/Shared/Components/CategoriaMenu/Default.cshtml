<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List"
                style="color: black" asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>     
        }

        <li class="dropdown-divider"></li>

        <li><a class="dropdown-item" asp-controller="Lanche" asp-action="List">Todos os Lanches</a></li>
    </ul>
</div>